# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env and configure with real values

# Domain and URLs
DOMAIN=finanbot.com
FRONTEND_URL=https://finanbot.com
BACKEND_URL=https://api.finanbot.com
WS_URL=wss://api.finanbot.com

# Database (Production)
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgresql://finanbot:${POSTGRES_PASSWORD}@postgres:5432/finanbot?schema=public

# Redis
REDIS_PASSWORD=your-secure-redis-password

# JWT Secrets (Generate strong secrets)
JWT_SECRET=your-super-secure-jwt-secret-256-bits-minimum
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-256-bits

# OpenAI API
OPENAI_API_KEY=sk-your-production-openai-api-key

# Open Finance (Production credentials)
OPEN_FINANCE_BASE_URL=https://api.openfinance.org.br
OPEN_FINANCE_CLIENT_ID=your-production-client-id
OPEN_FINANCE_CLIENT_SECRET=your-production-client-secret
OPEN_FINANCE_REDIRECT_URI=https://finanbot.com/auth/callback

# Email Service (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@finanbot.com
SMTP_PASS=your-smtp-password

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/finanbot.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/finanbot.com.key

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=warn
LOG_FILE=/app/logs/finanbot.log 